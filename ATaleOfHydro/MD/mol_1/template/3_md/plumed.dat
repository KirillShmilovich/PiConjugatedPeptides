FIT_TO_TEMPLATE REFERENCE=npt_ref.pdb

COM ATOMS=1-(N_ATOMS) LABEL=mol_1
COM ATOMS=(N_ATOMS+1)-(2N_ATOMS) LABEL=mol_2

fa: FIXEDATOM AT=3,3,5

d1: DISTANCE ATOMS=mol_1,fa COMPONENTS
d2: DISTANCE ATOMS=mol_2,fa COMPONENTS
res_xy: RESTRAINT ARG=d1.x,d1.y,d2.x,d2.y AT=0,0,0,0 KAPPA=2000,2000,2000,2000

d: DISTANCE ATOMS=mol_1,mol_2
res: RESTRAINT ARG=d AT=VVAALL KAPPA=1000

w_res: REWEIGHT_BIAS ARG=res.bias TEMP=300
w_allRes: REWEIGHT_BIAS ARG=res.bias,res_xy.bias TEMP=300

PRINT ARG=d,res.bias,w_res,w_allRes,d1.*,d2.* FILE=COLVAR STRIDE=10
DUMPMASSCHARGE FILE=mcfile
